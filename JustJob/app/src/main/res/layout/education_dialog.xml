<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Candidate.CandidateActivityFragment.education_dialog__">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quali_std_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            app:errorEnabled="true"
            style="@style/MyTextInputLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/quali_std"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextInputEditText"
                android:hint="Select Standard"
                android:focusable="false"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quali_stream_lay"
            android:layout_width="match_parent"
            android:hint="Ex. SSC Passed"
            app:errorEnabled="true"
            android:visibility="visible"
            android:focusable="false"
            style="@style/MyTextInputLayout"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/quali_stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextInputEditText"
                android:focusable="false"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quali_other_stream_lay"
            android:layout_width="match_parent"
            android:hint="Other Stream"
            android:visibility="gone"
            style="@style/MyTextInputLayout"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextInputEditText"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quali_clg_lay"
            android:layout_width="match_parent"
            android:visibility="gone"
            app:errorEnabled="true"
            style="@style/MyTextInputLayout"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/quali_clg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextInputEditText"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/edu_pursuing_chk_dg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm currently Pursuing this"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edu_start_date_dg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Start date"
                android:textColorHint="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="false"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_date_of_birth"/>
            <EditText
                android:id="@+id/edu_end_date_dg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="End date"
                android:textColorHint="@android:color/darker_gray"
                android:layout_weight="1"
                android:focusable="false"
                android:layout_marginStart="15dp"
                android:drawableEnd="@drawable/ic_date_of_birth"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="end"
            app:cardElevation="8dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/edu_save_btn_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_jobs_btn"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textSize="22sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>