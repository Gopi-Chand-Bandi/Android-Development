<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/container_layout_color"
    tools:context=".Company.CompanyApplicationFrg.cmpAplcCndAppliedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cmp_aplc_pojo_details_card_pojo_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:background="?attr/card_layout_color"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/cmp_apcl_cnd_aplly_job_role_aplc_short"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Role"
                        android:textSize="18sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Full Job Details      >"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"/>
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cmp_aplc_pojo_details_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            app:cardElevation="8dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            android:background="?attr/card_layout_color"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/layout_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/cmp_apcl_cnd_aplly_job_title_aplc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Title "
                        android:textSize="20sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/cmp_apcl_cnd_aplly_details_aplc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="@color/dark_gray"
                        android:text="Company Details" />
                    <TextView
                        android:id="@+id/cmp_apcl_cnd_aplly_location_aplc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/dark_gray"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="3dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#EAE7E7"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/primaryTitleColor"
                                android:text="Monthaly Salary"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/cmp_apcl_cnd_aplly_min_salary_aplc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dark_gray"
                                    android:text="500"
                                    android:layout_marginStart="3dp"/>
                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"/>
                                <TextView
                                    android:id="@+id/cmp_apcl_cnd_aplly_max_salary_aplc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dark_gray"
                                    android:text="1000"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="Experience"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/cmp_apcl_cnd_aplly_min_exp_aplc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dark_gray"
                                    android:text="5"
                                    android:layout_marginStart="3dp"/>

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"/>

                                <TextView
                                    android:id="@+id/cmp_apcl_cnd_aplly_max_exp_aplc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dark_gray"
                                    android:text="10 year"/>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/primaryTitleColor"
                                android:text="Employment"/>

                            <TextView
                                android:id="@+id/cmp_apcl_cnd_aplly_time_aplc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Time"
                                android:textColor="@color/dark_gray"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of Job"
                        android:textColor="?attr/primaryTitleColor"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/cmp_apcl_cnd_aplly_job_industy_aplc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:text="Hospitality &amp; Restaurant"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textColor="?attr/primaryTitleColor"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/cmp_apcl_cnd_aplly_email_aplc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:text="Email Address."
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/primaryTitleColor"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="Candidates This Posted Job."/>

        <LinearLayout
            android:id="@+id/cmp_aplc_cnd_applied_shimmer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerFrameLayout_cmp_aplc_cnd_applied"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <!-- Adding 15 rows of placeholders -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                    <include layout="@layout/cmp_home_shimmer_layout" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cmpAplcCndAppliedRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cmp_aplc_cnd_applied_empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/empty_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_box" />

            <TextView
                android:id="@+id/emptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nothing here!"
                android:alpha="0.3"
                android:textSize="22sp"
                android:textColor="?attr/primaryTitleColor" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>