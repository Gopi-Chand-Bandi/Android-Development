            <!--  for qualification  -->
            <LinearLayout
                android:id="@+id/fltQuliView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/fltBlwSSC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Below SSC"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltSSCPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCC Pass"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltHSCPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HSC Pass"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltUnderGraduate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Under Graduate"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltGraduate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Graduate"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltPostGraduate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post Graduate"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltPHD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PHD"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <!--  for exp  -->
            <LinearLayout
                android:id="@+id/fltExpView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/fltFresher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fresher"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltBlw1Yr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Below 1 year"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/flt1_2Yr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1-2 years"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/flt3_5Yr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3-5 years"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/flt6_9Yr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6-9 years"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/flt10PYr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10+ years"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <!--  for language known  -->
            <LinearLayout
                android:id="@+id/fltLangView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/fltHindi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hindi"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltMarathi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marathi"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltTamil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tamil"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltUrdu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Urdu"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltGujarati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gujarati"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/flt_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Apply"
        android:textColor="?attr/primaryTitleColor"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>