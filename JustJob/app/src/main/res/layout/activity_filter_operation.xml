<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company.FilterOperation.FilterOperationActivity">
    <LinearLayout
        android:id="@+id/flt_layout"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:id="@+id/flt_primary_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@color/black"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/findByGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Gender"
                android:textColor="?attr/primaryTitleColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/findByRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Role"
                android:textColor="?attr/primaryTitleColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/findByQuali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Qualification"
                android:textColor="?attr/primaryTitleColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/findByExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Experience"
                android:textColor="?attr/primaryTitleColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/findByLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Language"
                android:textColor="?attr/primaryTitleColor"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flt_secondary_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@color/dark_gray"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <!--  for gender  -->
            <LinearLayout
                android:id="@+id/fltGenderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/fltCB_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltCB_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/fltCB_both"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Both"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--  for Role  -->
