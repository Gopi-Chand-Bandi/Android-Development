<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/updated_posted_job_4_cmp_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/sort_layout"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/updated_posted_job_4_cmp_content_layout">
            <TextView
                android:id="@+id/updated_posted_job_4_cmp_count_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
                android:drawablePadding="10dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:textColor="?attr/primaryTitleColor"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/updated_posted_job_4_cmp_share_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_delete_24"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/updated_posted_job_4_cmp_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/updated_posted_job_4_cmp_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Role(Manager)"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?attr/primaryTitleColor"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/updated_posted_job_4_cmp_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <TextView
                android:id="@+id/updated_posted_job_4_cmp_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Company Name(Amazon)"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="#03DAC5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Industry"
                        android:textSize="12sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/updated_posted_job_4_cmp_cmp_industry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Job Industry"
                        android:textSize="10sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Type"
                        android:textSize="12sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/updated_posted_job_4_cmp_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="type"
                        android:textSize="10sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="12sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/updated_posted_job_4_cmp_locality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Locality"
                            android:textSize="10sp"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/updated_posted_job_4_cmp_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="City"
                            android:textSize="10sp"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:textSize="12sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/updated_posted_job_4_cmp_min_salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min salary"
                            android:textSize="10sp"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@color/dark_gray" />

                        <TextView
                            android:id="@+id/updated_posted_job_4_cmp_max_salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Max Salary"
                            android:textSize="10sp"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textSize="12sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/updated_posted_job_4_cmp_min_exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min Exp"
                            android:textSize="10sp"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@color/dark_gray" />

                        <TextView
                            android:id="@+id/updated_posted_job_4_cmp_max_exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Max Exp"
                            android:textSize="10sp"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qualification"
                        android:textSize="12sp"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/updated_posted_job_4_cmp_qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="qualification"
                        android:textSize="10sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>