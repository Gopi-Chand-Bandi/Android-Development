<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Candidate.CandidateActivityFragment.ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                   <!-- <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/circle_image_profile"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        app:civ_shadow_radius="10dp"
                        app:civ_shadow_color="#FFFFFF"/>-->

                    <TextView
                        android:id="@+id/tv_hello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello,"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/profile_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="?attr/primaryTitleColor"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_hello"/>
                    <TextView
                        android:id="@+id/profile_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Emails"
                        android:textColor="@color/dark_gray"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/profile_user_name"/>

                    <TextView
                        android:id="@+id/cnd_profile_edit_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_jobs_btn"
                        android:drawableStart="@drawable/ic_edit_tv"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Edit"
                        android:textColor="#00BFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/go_to_profile_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile View>"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:layout_below="@id/profile_user_name"
                        android:textColor="#00BFFF"
                        android:textSize="18sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:orientation="vertical"
                android:layout_below="@+id/card_profile_one">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_skill" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skill"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_skills"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="multiple skills"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_cap_school_24" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qualification"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_qualifications"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="multiple qualification"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_work" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Experience"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_experience"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="multiple Experience"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_profile_new" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Profile"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_job_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Profiles"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/location" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/location" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/person_color" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_date_of_birth" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Date Of Birth"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_dob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_local_phone" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/primaryTitleColor"/>
                            <TextView
                                android:id="@+id/cnd_profile_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:background="@color/white"
                android:layout_below="@id/card_profile_two">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/profile_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textColor="#000"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawableLeft="@drawable/ic_save"
                        android:textSize="22sp"
                        android:visibility="gone"
                        android:drawablePadding="8dp"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="#EDEAEA"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/profile_theme_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Theme"
                            android:textColor="?attr/primaryTitleColor"
                            android:drawableLeft="@drawable/ic_theme_change"
                            android:textSize="16sp"
                            android:drawablePadding="8dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="11dp"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/profile_change_theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_alignParentEnd="true"
                            app:track="@drawable/tract_switch"
                            android:thumb="@drawable/thumb_switch"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/profile_resume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Resume"
                        android:textColor="?attr/primaryTitleColor"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawableLeft="@drawable/ic_resume_and_cv"
                        android:textSize="16sp"
                        android:drawablePadding="8dp"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EDEAEA"/>
                    <TextView
                        android:id="@+id/profile_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        android:textColor="?attr/primaryTitleColor"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawableLeft="@drawable/ic_help"
                        android:textSize="16sp"
                        android:drawablePadding="8dp"
                        android:padding="5dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EDEAEA"/>
                    <TextView
                        android:id="@+id/profile_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textColor="?attr/primaryTitleColor"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawableLeft="@drawable/ic_feedback"
                        android:textSize="16sp"
                        android:drawablePadding="8dp"
                        android:padding="5dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EDEAEA"/>
                    <TextView
                        android:id="@+id/profile_interview_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Interview Tips"
                        android:textColor="?attr/primaryTitleColor"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawableLeft="@drawable/ic_feedback_outline"
                        android:textSize="16sp"
                        android:drawablePadding="8dp"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EDEAEA"/>
                    <TextView
                        android:id="@+id/profile_signout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign Out"
                        android:textColor="?attr/primaryTitleColor"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawableLeft="@drawable/ic_logout"
                        android:padding="5dp"
                        android:drawablePadding="8dp"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>