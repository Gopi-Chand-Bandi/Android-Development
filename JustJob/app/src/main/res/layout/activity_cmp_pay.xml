<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/container_layout_color"
    tools:context=".Company.CompanyActivitys.CmpPayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:text="Payment Details"
        android:textColor="?attr/primaryTitleColor"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/card_layout_color"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Name: "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_Plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name: "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No: of Job Posts : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_JobPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No: of Job Application Unlocks : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_ApplicationUnlocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No: of Candidate Contact Unlocks : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_CandidateContactUnlocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No: of Candidate Profile Views : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlimited"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No: of Company Profile Views : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlimited"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No: of Company/Vendor Contact Unlocks : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_CompanyUnlocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Validity : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_PlanValidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Price : "
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTitleColor"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/Payment_PlanPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/payment_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_jobs_btn"
            android:text="Pay!"
            android:textAllCaps="true"
            android:textSize="22sp" />

    </RelativeLayout>



</RelativeLayout>