<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/container_layout_color"
    tools:context=".Company.PlaneActivity.cmpPlaneCompRecruitmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-28dp"
        tools:layout_editor_absoluteY="-55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="1dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Complete Recruitment"
                    android:textStyle="bold"
                    android:textColor="#67B8DD"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:textSize="14sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:text="3,000 recruitment agencies hunt candidates for your job instantly"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:text="Dedicated Just Jobs HR Recruiter screens &amp; schedules interview"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:text="Assured Recruitment - Pay only when candidate joins"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:text="One time Free Replacement provided if candidate leaves"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="?attr/primaryTitleColor"
                    android:text="Trusted by 13,000 employers"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"/>

                <!--<Button
                    android:id="@+id/Recruitment_buy_btn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="buy"
                    android:textColor="?attr/primaryTitleColor"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/plan_btn_design"/>-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:cardElevation="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    app:cardCornerRadius="6dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/Recruitment_buy_btn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="buy"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:background="@drawable/search_jobs_btn"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>