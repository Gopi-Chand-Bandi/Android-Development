<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustJob" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1a1a1a</item>
        <!--        <item name="colorPrimary">@android:color/darker_gray</item>-->
        <!--        <item name="colorPrimaryVariant">#656565</item>-->
        <item name="colorPrimaryVariant">#0d0d0d</item>
        <item name="colorOnPrimary">@color/colorAccentNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="tabTextColor">@color/dark_gray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="primaryTitleColor">@color/primaryTitleColor</item>

        <item name="bottom_navi_not_sected">@color/dark_gray</item>
        <item name="bottom_navi_sected">@color/black</item>

        <item name="card_layout_color">@color/white</item>
        <item name="container_layout_color">@color/container_layout_color</item>

    </style>

    <style name="time_picker_theme" parent="android:Widget.Material.Light.ButtonBar.AlertDialog" tools:targetApi="lollipop">
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:numbersSelectorColor">@color/dark_gray</item>
        <item name="android:numbersBackgroundColor">@color/dark_gray</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">?attr/primaryTitleColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#000000</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/teal_200</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <!--        <item name="colorControlNormal">#FAFAFA</item>-->
        <item name="colorControlNormal">@color/dark_gray</item>
    </style>

    <style name="SpinnerThemeLight">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/white</item>
    </style>

    <style name="SpinnerThemeLight_new" parent="Theme.AppCompat.Dialog">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="alertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="searchable_pop_them" parent="Theme.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="android:alertDialogTheme">@style/AppTheme.SpinnerDialog</item>
    </style>

    <style name="AppTheme.SpinnerDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.JustJob.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JustJob.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JustJob.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>